services:
  web:
    image: nginx:latest
    ports:
      - "4444:80"
    volumes:
      - .:/app
      - ./site.conf:/etc/nginx/conf.d/default.conf
    links:
      - php
  php:
    build:
      context: .
      dockerfile: php-fpm.Dockerfile
    environment:
      - C2K48_DATA=/tmp
    volumes:
      - .:/app
